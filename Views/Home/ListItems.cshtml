@model IEnumerable<Afleveringsopgave.Models.ShoppingList>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Responses</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="text-center p-2">
        <h2 class="text-center">Her er din indkøbsliste</h2>
        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr><th>Varenavn</th><th>Antal</th><th>Afdeling</th><th>Slet</th></tr>
            </thead>
            <tbody>
                @foreach (Afleveringsopgave.Models.ShoppingList r in Model!)
                {
                    <tr>
                        <td>@r.Item</td>
                        <td>@r.Amount</td>
                        <td>@r.Location</td>
                        <td>
                            <form asp-action="RemoveItems" method="post" class="form-inline">
                                <input type="hidden" name="itemId" value="@r.Id"/>
                                <button type="submit" class="btn btn-danger btn-sm">Slet</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-primary" asp-action="AddForm">Tilføj ny vare til indkøbslisten</a>
    </div>
</body>
</html>